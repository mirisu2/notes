# Preparing
yum groupinstall "Development Tools"
yum install -y wget readline-devel pcre-devel openssl-devel systemd-devel

# Get haproxy
cd /opt
wget http://www.haproxy.org/download/2.3/src/haproxy-2.3.6.tar.gz
wget https://www.lua.org/ftp/lua-5.3.5.tar.gz

tar -xzf lua-5.3.5.tar.gz
cd lua-5.3.5
make INSTALL_TOP=/opt/lua-5.3.5 linux install
cd ..

tar -xzf haproxy-2.3.6.tar.gz
cd haproxy-2.3.6
# make help - show all parameters

make -j $(nproc) \
USE_NS=1 \
USE_TFO=1 \
USE_OPENSSL=1 \
USE_ZLIB=1 \
USE_LUA=1 \
USE_PCRE=1 \
USE_SYSTEMD=1 \
USE_LIBCRYPT=1 \
USE_THREAD=1 \
TARGET=linux-glibc \
LUA_INC=/opt/lua-5.3.5/include \
LUA_LIB=/opt/lua-5.3.5/lib \
PREFIX=/usr/local \
SBINDIR=$(PREFIX)/sbin \
MANDIR=$(PREFIX)/share/man \
EXTRA_OBJS="contrib/prometheus-exporter/service-prometheus.o"

make install

groupadd -g 188 haproxy
useradd -g 188 -u 188 -d /var/lib/haproxy -s /sbin/nologin -c haproxy haproxy

cp /opt/haproxy-2.3.6/contrib/systemd/haproxy.service.in /etc/systemd/system/multi-user.target.wants/haproxy.service

[Unit]
Description=HAProxy Load Balancer
After=network-online.target
Wants=network-online.target

[Service]
Environment="CONFIG=/etc/haproxy/haproxy.conf" "PIDFILE=/run/haproxy.pid" "EXTRAOPTS=-S /run/haproxy-master.sock"
ExecStartPre=/usr/local/sbin/haproxy -f $CONFIG -c -q $EXTRAOPTS
ExecStart=/usr/local/sbin/haproxy -Ws -f $CONFIG -p $PIDFILE $EXTRAOPTS
ExecReload=/usr/local/sbin/haproxy -f $CONFIG -c -q $EXTRAOPTS
ExecReload=/bin/kill -USR2 $MAINPID
KillMode=mixed
Restart=always
SuccessExitStatus=143
Type=notify

[Install]
WantedBy=multi-user.target


mkdir /etc/haproxy
vi /etc/haproxy/haproxy.conf
################################################
# HAPROXY config file
################################################
global
    daemon
    log /dev/log local0 warning
    nbproc 1
    nbthread 4
    maxconn 100000   
    user haproxy
    group haproxy    
    log-send-hostname lb-03
    log-tag haproxy
    pidfile     /var/run/haproxy.pid
    
defaults
    timeout connect 10s
    timeout client 50s
    timeout server 50s
    log global
    maxconn 100000
    timeout client-fin 1s
    timeout server-fin 1s
    timeout http-request 10s
    timeout http-keep-alive 50s
    
frontend stats
    bind *:8484
    mode http
    option http-use-htx
    http-request use-service prometheus-exporter if { path /metrics }
    stats enable
    stats hide-version
    stats uri /stats
    stats auth admin:p@ssword
    stats refresh 10s
    
frontend kube-apiserver
    option tcplog
    mode tcp
    bind *:6443
    default_backend kube-apiserver

backend kube-apiserver
    option tcp-check
    tcp-check connect
    mode tcp
    balance roundrobin
    server controller-1 172.16.16.161:6443 check send-proxy
    server controller-2 172.16.16.162:6443 check send-proxy
    server controller-3 172.16.16.163:6443 check send-proxy
################################################

systemctl daemon-reload && systemctl enable haproxy && systemctl start haproxy
